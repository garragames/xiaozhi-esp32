{
    "target": "esp32c3",
    "builds": [
        {
            "name": "kotty-esp32",
            "sdkconfig_append": [
                "CONFIG_PM_ENABLE=y",
                "CONFIG_FREERTOS_USE_TICKLESS_IDLE=y",
                "CONFIG_USE_ESP_WAKE_WORD=y",
                "CONFIG_ESP_CONSOLE_USB_SERIAL_JTAG=y",
                "CONFIG_LANGUAGE_ES_ES=y",
                "CONFIG_LCD_GC9A01_240X240=y",
                "CONFIG_LCD_TYPE_GC9A01_SERIAL=y",
                "CONFIG_SR_WN_WN9S_HIESP=y",
                "CONFIG_SR_WN_WN9S_HIJASON=y",
                "CONFIG_FLASH_CUSTOM_ASSETS=y",
                "CONFIG_CUSTOM_ASSETS_FILE=\"boards/kotty/assets.bin\"",
                "CONFIG_OTA_URL=\"https://kotty.ai/kotty-server/xiaozhi/ota/\""
            ]
        }
    ]
}
